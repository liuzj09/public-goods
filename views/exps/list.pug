extends ../base.pug

block content
  h3 Experiments

  a(href="/exps/create", class='btn btn-success btn-sm')
    i.glyphicon.glyphicon-plus
    span  Create experiments

  each exp in exps
    .media
      a(href=`/exps/${exp.key.id}`)
        .media-body
          h4= exp.key.id
            | &nbsp;
            small= exp.data.creationDate

  if !exps.length
    p No experiments found.

  if nextPageToken
    nav
      ul.pager
        li
          a(href=`?pageToken=${encodeURIComponent(nextPageToken)}`) More
