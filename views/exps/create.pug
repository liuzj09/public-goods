extends ../base.pug

block content
  h3 Creat Experiment
  form(method="POST")
    fieldset
      legend Passcode
      input(type="text" name="passcode" value=experiment.passcode)

    fieldset
      legend Number of participants
      input(type="number" name="partSize" value=experiment.partSize)

    fieldset
      legend Kick
      input(type="radio" name="kickEnabled" value="true" checked)
      input(type="radio" name="kickEnabled" value="false")

    input(type="submit" value="Create")
